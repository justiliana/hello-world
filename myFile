#include<iostream>
using namespace std;
int main()
{
    int n;
    double a[20],sum=0;
    cout<<"Vavedi broi chisla:";
    cin>>n;
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
        sum+=a[i];
    }
    double ave=0;
    ave=sum/n;
    cout<<"ave="<<ave<<endl;
    cout<<"sum="<<sum<<endl;
    return 0;
}
